<% if (locals.carouselClasses == null) carouselClasses = []; %>

<div class="carousel <%- carouselClasses.join(" ") %>" id="<%- carouselId %>">
    <div class="carousel-stack">
        <div class="prev-next-container prev">
            <span class="prev-icon"></span>
        </div>
        <div class="prev-next-container next">
            <span class="next-icon"></span>
        </div>
        <div class="detail stack-layout pt-1 pb-1">
            <!-- Texts -->
        </div>

        <div class="carousel-stacked content-layer full-w">
            <!-- images -->
        </div>
        <template class="content-template">
            <!-- TODO -->
            <% for (const imgSource of imgSources){ %>
                <img class="content"
                     src="<%- imgSource %>">
            <% } %>
        </template>
        <template class="detail-text-template">
            <%- JSON.stringify(detailTexts) %>
        </template>

    </div>
</div>

<script>
    (() => {
        let carouselId = "<%- carouselId %>";

        $(document).ready(() => {
            initializeCarousel(carouselId);
        });
    })();
</script>